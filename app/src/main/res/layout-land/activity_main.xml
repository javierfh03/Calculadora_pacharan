<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hoja"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewEndrina"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/endrina" />

            <TextView
                android:id="@+id/textViewEndrina"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="0 gramos de endrinas"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewManzanilla"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/manzanilla" />

            <TextView
                android:id="@+id/textViewManzanilla"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="0 flores de manzanilla"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewCafe"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cafe" />

            <TextView
                android:id="@+id/textViewCafe"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="0 granos de café"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewCanela"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/canela" />

            <TextView
                android:id="@+id/textViewCanela"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="0 palitos de canela"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewAnis"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/anis" />

            <EditText
                android:id="@+id/editCantAnis"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="casual"
                android:inputType="number"
                android:text="0"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewAnis"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="litros de anís"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>